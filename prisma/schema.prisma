enum Gender {
  MALE
  FEMALE
}

model Product{

  idx String @id @default(uuid()) @db.Uuid
  prod_no Int @unique @default(autoincrement()) @db.Integer
  createAt DateTime @default(now()) @map("created_at") @db.Timestamp(6)
  updateAt DateTime? @default(now()) @updatedAt @map("updated_at") @db.Timestamp(6)
  deletedAt DateTime? @map("deleted_at") @db.Timestamp(6)
  name String @map("name") @db.VarChar
  price Int @map("price") @db.Integer
  description String @map("description") @db.VarChar()
  stock Int @map("stock") @db.Integer
}

model Customers{

  idx String @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  cust_no Int @default(autoincrement()) @db.Integer
  createdAt DateTime @default(now()) @map("created_at") @db.Timestamp(6)
  updatedAt DateTime @default(now()) @updatedAt @map("updated_at") @db.Timestamp(6)
  deletedAt DateTime? @map("deleted_at") @db.Timestamp(6)
  nickname String? 
  email String @unique
  password String   //비밀번호, bcrypt 해쉬
  name String
  phone String @unique
  gender Gender? 
}